<?xml version="1.0" encoding="UTF-8"?>
<postchunk>
  <section-def-cats>
    <def-cat n="enon">
      <cat-item name="enon"/>
    </def-cat>
    <def-cat n="verb">
      <cat-item name="v"/>
      <cat-item name="vbser"/>
      <cat-item name="vbser_pp"/>
      <cat-item name="Ã¨sser"/>
      <cat-item name="estar"/>
      <cat-item name="vbser_adv_pp"/>
      <cat-item name="verb"/>
      <cat-item name="pro-verb"/>
      <cat-item name="pro-pro-verb"/>
    </def-cat>
    <def-cat n="pronom">
      <cat-item name="prn"/>
    </def-cat>
    <def-cat n="sent">
      <cat-item name="punt"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="gen">
      <attr-item tags="m"/>
      <attr-item tags="f"/>
      <attr-item tags="mf"/>
      <attr-item tags="nt"/>
      <attr-item tags="GD"/>
    </def-attr>

    <def-attr n="nbr">
      <attr-item tags="sg"/>
      <attr-item tags="pl"/>
      <attr-item tags="sp"/>
      <attr-item tags="ND"/>
    </def-attr>

    <def-attr n="case">
      <attr-item tags="aa"/>
      <attr-item tags="Aa"/>
      <attr-item tags="AA"/>
    </def-attr>
  </section-def-attrs>

  <section-def-vars>
    <def-var n="paraula"/>
  </section-def-vars>

  <section-def-macros>
    <def-macro n="GD2m" npar="1">
      <choose>
        <when>
          <test>
            <equal><clip pos="1" part="gen"/><lit-tag v="GD"/></equal>
          </test>
          <let><clip pos="1" part="gen"/><lit-tag v="m"/></let>
        </when>
      </choose>
    </def-macro>

    <def-macro n="change_case" npar="1">
      <choose>
        <when>
          <test>
            <equal><clip pos="0" part="case"/><lit-tag v="aa"/></equal>
          </test>
          <modify-case><clip pos="1" part="lem"/><lit v="aa"/></modify-case>
        </when>
        <when>
          <test>
            <equal><clip pos="0" part="case"/><lit-tag v="Aa"/></equal>
          </test>
          <modify-case><clip pos="1" part="lem"/><lit v="Aa"/></modify-case>
        </when>
        <when>
          <test>
            <equal><clip pos="0" part="case"/><lit-tag v="AA"/></equal>
          </test>
          <modify-case><clip pos="1" part="lem"/><lit v="AA"/></modify-case>
        </when>
      </choose>
    </def-macro>
  </section-def-macros>

  <section-rules>
    <rule comment="CHUNK: enon (changing case)">
      <pattern>
        <pattern-item n="enon"/>
      </pattern>
      <action>
        <call-macro n="change_case"><with-param pos="1"/></call-macro>
        <out>
          <lu>
            <clip pos="1" part="whole"/>
          </lu>
        </out>
      </action>
    </rule>

    <rule comment="CHUNK: verb (changing case)">
      <pattern>
        <pattern-item n="verb"/>
      </pattern>
      <action>
        <call-macro n="change_case"><with-param pos="1"/></call-macro>
        <call-macro n="GD2m"><with-param pos="1"/></call-macro>
        <out>
          <lu>
            <clip pos="1" part="whole"/>
          </lu>
        </out>

        <choose>
          <when>
            <test>
              <equal><lu-count/><lit v="2"/></equal>
            </test>
            <call-macro n="GD2m"><with-param pos="2"/></call-macro>
            <out>
              <b pos="1"/>
              <lu>
                <clip pos="2" part="whole"/>
              </lu>
            </out>
          </when>
          <when>
            <test>
              <equal><lu-count/><lit v="3"/></equal>
            </test>
            <call-macro n="GD2m"><with-param pos="2"/></call-macro>
            <call-macro n="GD2m"><with-param pos="3"/></call-macro>
            <out>
              <b pos="1"/>
              <lu>
                <clip pos="2" part="whole"/>
              </lu>
              <b pos="2"/>
              <lu>
                <clip pos="3" part="whole"/>
              </lu>
            </out>
          </when>
          <when>
            <test>
              <equal><lu-count/><lit v="4"/></equal>
            </test>
            <call-macro n="GD2m"><with-param pos="2"/></call-macro>
            <call-macro n="GD2m"><with-param pos="3"/></call-macro>
            <call-macro n="GD2m"><with-param pos="4"/></call-macro>
            <out>
              <b pos="1"/>
              <lu>
                <clip pos="2" part="whole"/>
              </lu>
              <b pos="2"/>
              <lu>
                <clip pos="3" part="whole"/>
              </lu>
              <b pos="3"/>
              <lu>
                <clip pos="4" part="whole"/>
              </lu>
            </out>
          </when>
          <when>
            <test>
              <equal><lu-count/><lit v="5"/></equal>
            </test>
            <call-macro n="GD2m"><with-param pos="2"/></call-macro>
            <call-macro n="GD2m"><with-param pos="3"/></call-macro>
            <call-macro n="GD2m"><with-param pos="4"/></call-macro>
            <call-macro n="GD2m"><with-param pos="5"/></call-macro>
            <out>
              <b pos="1"/>
              <lu>
                <clip pos="2" part="whole"/>
              </lu>
              <b pos="2"/>
              <lu>
                <clip pos="3" part="whole"/>
              </lu>
              <b pos="3"/>
              <lu>
                <clip pos="4" part="whole"/>
              </lu>
              <b pos="4"/>
              <lu>
                <clip pos="5" part="whole"/>
              </lu>
            </out>
          </when>
        </choose>
      </action>
    </rule>

    <rule comment="CHUNK: pronom (changing case)">
      <pattern>
        <pattern-item n="pronom"/>
      </pattern>
      <action>
        <call-macro n="change_case"><with-param pos="1"/></call-macro>
        <out>
          <lu>
            <clip pos="1" part="whole"/>
          </lu>
        </out>

        <choose>
          <when>
            <test>
              <equal><lu-count/><lit v="2"/></equal>
            </test>
            <out>
              <b pos="1"/>
              <lu>
                <clip pos="2" part="whole"/>
              </lu>
            </out>
          </when>
        </choose>
      </action>
    </rule>

  </section-rules>
</postchunk>

