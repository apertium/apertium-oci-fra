      <cat-item tags="SV.vbser.partitiu"/>
      <cat-item tags="SV.vblex.*.partitiu"/>
      <cat-item tags="SV.vblex.*.partitiu"/>
    </def-cat>
    <def-cat n="SV_vbser">
      <cat-item tags="SV.vbser"/>
      <cat-item tags="SV.vbser.*"/>
    </def-cat>
    <def-cat n="PREP">
      <cat-item tags="PREP"/>
      <cat-item tags="PREP.*"/>
    </def-cat>
    <def-cat n="PREP_de">
      <cat-item tags="PREP.de"/>
    </def-cat>
    <def-cat n="REL_CNJ">
      <cat-item tags="Rel"/>
      <cat-item tags="cnjsub"/>
      <cat-item tags="cnjadv"/>
    </def-cat>
    <def-cat n="DET">
      <cat-item tags="Det"/>
      <cat-item tags="Det.*"/>
    </def-cat>
    <def-cat n="DET_def">
      <cat-item tags="Det.def.*"/>
    </def-cat>
    <def-cat n="DET_defpl">
      <cat-item tags="Det.def.*.pl.*"/>
      <cat-item tags="Det.def.*.pl.*"/>
    </def-cat>
    <def-cat n="DET_aucun">
      <cat-item tags="Det.aucun.*"/>
    </def-cat>

    <def-cat n="UNK">
      <cat-item tags="unknown"/>
    </def-cat>
    <def-cat n="SN_UNK">
      <cat-item tags="SN"/>
      <cat-item tags="SN.*"/>
      <cat-item tags="unknown"/>
    </def-cat>
    <def-cat n="SN_SA_UNK">
      <cat-item tags="SN"/>
      <cat-item tags="SN.*"/>
      <cat-item tags="SA"/>
      <cat-item tags="SA.*"/>
      <cat-item tags="SAcomp.*"/>
      <cat-item tags="unknown"/>
    </def-cat>

    <def-cat n="CM">
      <cat-item tags="CM"/>
    </def-cat>
    <def-cat n="LPAR">
      <cat-item tags="LPAR"/>
    </def-cat>
    <def-cat n="SENT">
      <cat-item tags="SENT"/>
    </def-cat>

    <def-cat n="TOT_EXCEPTE_SENT">
      <cat-item tags="Det"/>
      <cat-item tags="Det.*"/>
      <cat-item tags="SN"/>
      <cat-item tags="SN.*"/>
      <cat-item tags="SA"/>
      <cat-item tags="SA.*"/>
      <cat-item tags="SAcomp.*"/>
      <cat-item tags="SPron"/>
      <cat-item tags="SPron.*"/>
      <cat-item tags="Num"/>
      <cat-item tags="Num.*"/>
      <cat-item tags="SAdv"/>
      <cat-item tags="SAdv.*"/>
      <cat-item tags="SV"/>
      <cat-item tags="SV.*"/>

      <cat-item tags="PREP"/>
      <cat-item tags="cnjsub"/>
      <cat-item tags="cnjcoo"/>
      <cat-item tags="cnjadv"/>
      <cat-item tags="Rel"/>
      <cat-item tags="Rel.*"/>

      <cat-item tags="CM"/>
      <cat-item tags="LPAR"/>
      <cat-item tags="RPAR"/>

      <cat-item tags="unknown"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="chunk">
      <attr-item tags="SN"/>
      <attr-item tags="SA"/>
      <attr-item tags="SV"/>
    </def-attr>

    <def-attr n="gen">
      <attr-item tags="m"/>
      <attr-item tags="f"/>
      <attr-item tags="mf"/>
    </def-attr>

    <def-attr n="sl_gen">
      <attr-item tags="sl_m"/>
      <attr-item tags="sl_f"/>
      <attr-item tags="sl_mf"/>
    </def-attr>

    <def-attr n="nbr">
      <attr-item tags="sg"/>
      <attr-item tags="pl"/>
      <attr-item tags="sp"/>
      <attr-item tags="ND"/>
    </def-attr>

    <def-attr n="temps">
      <attr-item tags="inf"/>
      <attr-item tags="ger"/>
      <attr-item tags="pp"/>
      <attr-item tags="pri"/>
      <attr-item tags="ifi"/>
      <attr-item tags="pii"/>
      <attr-item tags="fti"/>
      <attr-item tags="cni"/>
      <attr-item tags="prs"/>
      <attr-item tags="pis"/>
      <attr-item tags="fts"/>
      <attr-item tags="imp"/>
    </def-attr>

    <def-attr n="negation">
      <attr-item tags="negation"/>
    </def-attr>

    <def-attr n="a_sent">
      <attr-item tags="quest"/>
      <attr-item tags="excl"/>
      <attr-item tags="std"/>
    </def-attr>

  </section-def-attrs>

  <section-def-vars>
    <def-var n="set_enonciatiu"/>
    <def-var n="case_enon"/>
    <def-var n="case_verb"/>
    <def-var n="inici" v="&lt;oc&gt;"/> <!-- indica si és la primera frase que es tradueix -->
  </section-def-vars>

  <section-def-macros>
    <def-macro n="f_bcond" npar="2"><!--Per mirar si el blanc conté o no format. Cal posar aquesta funció en les regles en què desaparegui alguna paraula, per tal de decidir si el blanc de la paraula eliminada s'ha d'eliminar o conservar. Si conté format cal conservar-la, si no en conté cal eliminar-la perquè no apareguin dos espais seguits. -->
      <choose>
        <when>
          <test>
            <not>
              <equal>
                <b pos="1"/>
                <lit v=" "/>
              </equal>
            </not>
          </test>
          <out>
            <b pos="1"/>
          </out>
        </when>
      </choose>
    </def-macro>

    <def-macro n="escriure_enonciatiu" npar="2"><!-- par1 = vèrb; par2 = sent -->
      <choose>
        <when>
          <test>
            <equal><var n="inici"/><lit-tag v="oc"/></equal>
          </test>
          <let><var n="case_enon"/><lit-tag v="Aa"/></let>
          <let><var n="case_verb"/><lit-tag v="aa"/></let>
          <let>
            <clip pos="1" part="chunk"/>
            <concat>
              <clip pos="1" part="chunk"/>
              <lit-tag v="aa"/>
            </concat>
          </let>
        </when>
        <otherwise>
          <let><var n="case_enon"/><lit-tag v=""/></let>
          <let><var n="case_verb"/><lit-tag v=""/></let>
        </otherwise>
      </choose>

      <choose>
        <when>
          <test>
            <equal><clip pos="1" part="negation"/><lit-tag v="negation"/></equal>
          </test>
          <out>
            <chunk>
              <lit v="enon"/>
              <lit-tag v="SAdv"/>
              <var n="case_enon"/>
              <lit v="{^"/>
              <lit v="ne"/>
              <lit-tag v="adv"/>
              <lit-tag v="enon"/>
              <lit v="$}"/>
            </chunk>
            <b/>
            <b/>	<!-- extra blank: workaround space bug -->
          </out>
        </when>
        <when>
          <test>
            <equal><clip pos="2" part="lem"/><lit v="quest"/></equal>
          </test>
          <out>
            <chunk>
              <lit v="enon"/>
              <lit-tag v="SAdv"/>
              <var n="case_enon"/>
              <lit v="{^"/>
              <lit v="e"/>
              <lit-tag v="adv"/>
              <lit-tag v="enon"/>
              <lit v="$}"/>
            </chunk>
            <b/>
            <b/>	<!-- extra blank: workaround space bug -->
          </out>
        </when>
        <when>
          <test>
            <equal><clip pos="2" part="lem"/><lit v="excl"/></equal>
          </test>
          <out>
            <chunk>
              <lit v="enon"/>
              <lit-tag v="SAdv"/>
              <var n="case_enon"/>
              <lit v="{^"/>
              <lit v="be"/>
              <lit-tag v="adv"/>
              <lit-tag v="enon"/>
              <lit v="$}"/>
            </chunk>
            <b/>
            <b/>	<!-- extra blank: workaround space bug -->
          </out>
        </when>
        <otherwise>
          <out>
            <chunk>
              <lit v="enon"/>
              <lit-tag v="SAdv"/>
              <var n="case_enon"/>
              <lit v="{^"/>
              <lit v="que"/>
              <lit-tag v="adv"/>
              <lit-tag v="enon"/>
              <lit v="$}"/>
            </chunk>
            <b/>
            <b/>	<!-- extra blank: workaround space bug -->
          </out>
        </otherwise>
      </choose>
    </def-macro>

    <def-macro n="apondre_enonciatiu" npar="2"><!-- par1 = vèrb; par2 = sent -->
      <choose>
        <when>
          <test>
            <equal><clip pos="1" part="negation"/><lit-tag v="negation"/></equal>
          </test>
          <let><var n="set_enonciatiu"/><lit v="oc"/></let>
          <call-macro n="escriure_enonciatiu"><with-param pos="1"/><with-param pos="2"/></call-macro>
        </when>
        <when>
          <test>
            <or>
              <equal><clip pos="1" part="temps"/><lit-tag v="inf"/></equal>
              <equal><clip pos="1" part="temps"/><lit-tag v="ger"/></equal>
              <equal><clip pos="1" part="temps"/><lit-tag v="pp"/></equal>
              <equal><clip pos="1" part="temps"/><lit-tag v="imp"/></equal>
            </or>
          </test>
          <let><var n="set_enonciatiu"/><lit v="non"/></let>
        </when>
        <otherwise>
          <let><var n="set_enonciatiu"/><lit v="oc"/></let>
          <call-macro n="escriure_enonciatiu"><with-param pos="1"/><with-param pos="2"/></call-macro>
        </otherwise>
      </choose>
    </def-macro>

  </section-def-macros>

  <section-rules>

    <!-- RÈGLAS PER ACTUALISAR LA VARIABLA inici -->

    <rule comment="REGLA: TOT_EXCEPTE_SENT">
      <pattern>
        <pattern-item n="TOT_EXCEPTE_SENT"/>
      </pattern>
      <action>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="non"/></let>
      </action>
    </rule>

    <rule comment="REGLA: SENT">
      <pattern>
        <pattern-item n="SENT"/>
      </pattern>
      <action>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="oc"/></let>
      </action>
    </rule>

    <!-- RÈGLAS PER GENERAR UN ENONCIATIU -->

    <rule comment="REGLA: SV SENT">
      <pattern>
        <pattern-item n="SV"/>
        <pattern-item n="SENT"/>
      </pattern>
      <action>
        <call-macro n="apondre_enonciatiu"><with-param pos="1"/><with-param pos="2"/></call-macro>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="oc"/></let>
      </action>
    </rule>

    <rule comment="REGLA: SV SN_SA_UNK SENT: La maison est belle. > L'ostau qu'ei beròi.">
      <pattern>
        <pattern-item n="SV"/>
        <pattern-item n="SN_SA_UNK"/>
        <pattern-item n="SENT"/>
      </pattern>
      <action>
        <call-macro n="apondre_enonciatiu"><with-param pos="1"/><with-param pos="3"/></call-macro>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
  </out>	<!-- extra blank: workaround space bug -->
<choose>
  <when>
    <test>
      <equal><var n="set_enonciatiu"/><lit v="oc"/></equal>
    </test>
  <out>
    <b/>
  </out>
  </when>
</choose>
  <out>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
          <b pos="2"/>
          <chunk>
            <clip pos="3" part="lem"/>
            <clip pos="3" part="tags"/>
            <clip pos="3" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="oc"/></let>
      </action>
    </rule>

    <rule comment="REGLA: SV SAdv SA SENT: La maison est très belle. > L'ostau qu'ei plan beròi.">
      <pattern>
        <pattern-item n="SV"/>
        <pattern-item n="SAdv"/>
        <pattern-item n="SA"/>
        <pattern-item n="SENT"/>
      </pattern>
      <action>
        <call-macro n="apondre_enonciatiu"><with-param pos="1"/><with-param pos="4"/></call-macro>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
  </out>	<!-- extra blank: workaround space bug -->
<choose>
  <when>
    <test>
      <equal><var n="set_enonciatiu"/><lit v="oc"/></equal>
    </test>
  <out>
    <b/>
  </out>
  </when>
</choose>
  <out>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
          <b pos="2"/>
          <chunk>
            <clip pos="3" part="lem"/>
            <clip pos="3" part="tags"/>
            <clip pos="3" part="chcontent"/>
          </chunk>
          <b pos="3"/>
          <chunk>
            <clip pos="4" part="lem"/>
            <clip pos="4" part="tags"/>
            <clip pos="4" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="oc"/></let>
      </action>
    </rule>

    <rule comment="REGLA: SV Det SN_SA_UNK SENT: C'est une maison belle. > Qu'ei un ostau beròi.">
      <pattern>
        <pattern-item n="SV"/>
        <pattern-item n="DET"/>
        <pattern-item n="SN_SA_UNK"/>
        <pattern-item n="SENT"/>
      </pattern>
      <action>
        <call-macro n="apondre_enonciatiu"><with-param pos="1"/><with-param pos="4"/></call-macro>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
  </out>	<!-- extra blank: workaround space bug -->
<choose>
  <when>
    <test>
      <equal><var n="set_enonciatiu"/><lit v="oc"/></equal>
    </test>
  <out>
    <b/>
  </out>
  </when>
</choose>
  <out>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
          <b pos="2"/>
          <chunk>
            <clip pos="3" part="lem"/>
            <clip pos="3" part="tags"/>
            <clip pos="3" part="chcontent"/>
          </chunk>
          <b pos="3"/>
          <chunk>
            <clip pos="4" part="lem"/>
            <clip pos="4" part="tags"/>
            <clip pos="4" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="oc"/></let>
      </action>
    </rule>

    <rule comment="REGLA: SV SAdv Det SN_SA_UNK SENT: C'est toujours une maison belle. > Qu'ei totjorn un ostau beròi.">
      <pattern>
        <pattern-item n="SV"/>
        <pattern-item n="SAdv"/>
        <pattern-item n="DET"/>
        <pattern-item n="SN_SA_UNK"/>
        <pattern-item n="SENT"/>
      </pattern>
      <action>
        <call-macro n="apondre_enonciatiu"><with-param pos="1"/><with-param pos="5"/></call-macro>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
  </out>	<!-- extra blank: workaround space bug -->
<choose>
  <when>
    <test>
      <equal><var n="set_enonciatiu"/><lit v="oc"/></equal>
    </test>
  <out>
    <b/>
  </out>
  </when>
</choose>
  <out>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
          <b pos="2"/>
          <chunk>
            <clip pos="3" part="lem"/>
            <clip pos="3" part="tags"/>
            <clip pos="3" part="chcontent"/>
          </chunk>
          <b pos="3"/>
          <chunk>
            <clip pos="4" part="lem"/>
            <clip pos="4" part="tags"/>
            <clip pos="4" part="chcontent"/>
          </chunk>
          <b pos="4"/>
          <chunk>
            <clip pos="5" part="lem"/>
            <clip pos="5" part="tags"/>
            <clip pos="5" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="oc"/></let>
      </action>
    </rule>

    <!-- RÈGLAS PER GENERAR PAS D'ENONCIATIU -->

    <rule comment="REGLA: REL_CNJ SV">
      <pattern>
        <pattern-item n="REL_CNJ"/>
        <pattern-item n="SV"/>
      </pattern>
      <action>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="non"/></let>
      </action>
    </rule>

    <rule comment="REGLA: REL_CNJ SN SV">
      <pattern>
        <pattern-item n="REL_CNJ"/>
        <pattern-item n="SN_UNK"/>
        <pattern-item n="SV"/>
      </pattern>
      <action>
        <out>
          <chunk>
            <clip pos="1" part="lem"/>
            <clip pos="1" part="tags"/>
            <clip pos="1" part="chcontent"/>
          </chunk>
          <b pos="1"/>
          <chunk>
            <clip pos="2" part="lem"/>
            <clip pos="2" part="tags"/>
            <clip pos="2" part="chcontent"/>
          </chunk>
          <b pos="2"/>
          <chunk>
            <clip pos="3" part="lem"/>
            <clip pos="3" part="tags"/>
            <clip pos="3" part="chcontent"/>
          </chunk>
        </out>
        <let><var n="inici"/><lit-tag v="non"/></let>
      </action>
    </rule>

  </section-rules>
</interchunk>

